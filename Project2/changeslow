def changeslow(amount, coins, coinsUsed): #recursive
	sum = amount
	num_coins = 0
	coinCount = len(coins)
	for i in coins:
		coinCount-=1
		if sum == i:
			num_coins+=1
			coinsUsed[coinCount]+=1
			return num_coins, coinsUsed
	for i in coins:
		coinCount-=1
		if i < sum: #coin value is less than amount
			num_coins+=1
			coinsUsed[coinCount]+=1
			sum = sum-i
			changeslow(sum, coins, coinsUsed)


print changeslow(15, [1, 5, 10, 25, 50], [0, 0, 0, 0, 0])
